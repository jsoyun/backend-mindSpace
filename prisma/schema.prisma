//Prisma Generate는 데이터 모델을 사용하여 Prisma Client를 생성하는 도구입니다. 
//Prisma Client를 사용하면 데이터베이스에 대한 CRUD 작업을 쉽게 수행할 수npx prisma migrate reset 있습니다.

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int    @id @default(autoincrement())
    name     String
    email    String @unique
    password String
    goals    Goal[]
    posts    Post[]
}

model Post {
    id       Int    @id @default(autoincrement())
    title    String
    author   User   @relation(fields: [authorId], references: [id])
    authorId Int
}

model Album {
    id     Int    @id @default(autoincrement())
    title  String
    singer String
}

model Goal {
    id           Int           @id @default(autoincrement())
    title        String
    description  String
    user         User          @relation(fields: [userId], references: [id])
    userId       Int
    dailyGoals   DailyGoal[]
    weeklyGoals  WeeklyGoal[]
    monthlyGoals MonthlyGoal[]
    yearlyGoals  YearlyGoal[]
}

model DailyGoal {
    id          Int      @id @default(autoincrement())
    title       String
    description String
    goal        Goal     @relation(fields: [goalId], references: [id])
    goalId      Int
    date        DateTime
    completed   Boolean
}

model WeeklyGoal {
    id          Int     @id @default(autoincrement())
    title       String
    description String
    goal        Goal    @relation(fields: [goalId], references: [id])
    goalId      Int
    weekNumber  Int
    year        Int
    completed   Boolean
}

model MonthlyGoal {
    id          Int     @id @default(autoincrement())
    title       String
    description String
    goal        Goal    @relation(fields: [goalId], references: [id])
    goalId      Int
    monthNumber Int
    year        Int
    completed   Boolean
}

model YearlyGoal {
    id          Int     @id @default(autoincrement())
    title       String
    description String
    goal        Goal    @relation(fields: [goalId], references: [id])
    goalId      Int
    yearNumber  Int
    completed   Boolean
}
